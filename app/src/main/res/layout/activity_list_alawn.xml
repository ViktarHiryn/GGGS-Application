<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RentALawn.ListALawnActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/innitialLawnForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/peach"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/brownishOrange"
                android:fontFamily="@font/segoe_ui"
                android:text="Fill Out The Following Form To List Your Lawn!"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="5dp"
                android:text="First Name *"
                android:textColor="@color/brownishOrange"
                android:textSize="17sp"
                android:textStyle="bold|italic" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/RALfirstNameEt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="25dp"
                app:boxCornerRadiusBottomEnd="35dp"
                app:boxCornerRadiusBottomStart="35dp"
                app:boxCornerRadiusTopEnd="35dp"
                app:boxCornerRadiusTopStart="35dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/GettingFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your First Name" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="5dp"
                android:text="Last Name *"
                android:textColor="@color/brownishOrange"
                android:textSize="17sp"
                android:textStyle="bold|italic" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/RALlastNameEt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="25dp"
                app:boxCornerRadiusBottomEnd="35dp"
                app:boxCornerRadiusBottomStart="35dp"
                app:boxCornerRadiusTopEnd="35dp"
                app:boxCornerRadiusTopStart="35dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/GettingLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your Last Name" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="5dp"
                android:text="Email *"
                android:textColor="@color/brownishOrange"
                android:textSize="17sp"
                android:textStyle="bold|italic" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/GettingEmailOfUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="25dp"
                app:boxCornerRadiusBottomEnd="35dp"
                app:boxCornerRadiusBottomStart="35dp"
                app:boxCornerRadiusTopEnd="35dp"
                app:boxCornerRadiusTopStart="35dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/NewLawnEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your Email" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="5dp"
                android:text="Phone Number *"
                android:textColor="@color/brownishOrange"
                android:textSize="17sp"
                android:textStyle="bold|italic" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/GettingUsersPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="25dp"
                app:boxCornerRadiusBottomEnd="35dp"
                app:boxCornerRadiusBottomStart="35dp"
                app:boxCornerRadiusTopEnd="35dp"
                app:boxCornerRadiusTopStart="35dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/NewLawnPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your Phone Number" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="5dp"
                android:text="Lawn's Adress *"
                android:textColor="@color/brownishOrange"
                android:textSize="17sp"
                android:textStyle="bold|italic" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/GettingAddressOfLawn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="25dp"
                app:boxCornerRadiusBottomEnd="35dp"
                app:boxCornerRadiusBottomStart="35dp"
                app:boxCornerRadiusTopEnd="35dp"
                app:boxCornerRadiusTopStart="35dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/NewLawnAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter The Address" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="5dp"
                android:text="Hours Available *"
                android:textColor="@color/brownishOrange"
                android:textSize="17sp"
                android:textStyle="bold|italic" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/GettingAvailableHours"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="25dp"
                app:boxCornerRadiusBottomEnd="35dp"
                app:boxCornerRadiusBottomStart="35dp"
                app:boxCornerRadiusTopEnd="35dp"
                app:boxCornerRadiusTopStart="35dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/NewLawnHours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter An Available Time Frame" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="5dp"
                android:text="Desired Price *"
                android:textColor="@color/brownishOrange"
                android:textSize="17sp"
                android:textStyle="bold|italic" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/GettingDesiredPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="25dp"
                app:boxCornerRadiusBottomEnd="35dp"
                app:boxCornerRadiusBottomStart="35dp"
                app:boxCornerRadiusTopEnd="35dp"
                app:boxCornerRadiusTopStart="35dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/NewLawnPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter The Desired Price" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/SubmitLawnInfoBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Submit" />

            <LinearLayout
                android:id="@+id/uploadingLawnImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/uploadWarningtv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Now, all you have to do is add an image of your lawn!"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold|italic" />

                <Button
                    android:id="@+id/uploadLawnImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Upload Image" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>